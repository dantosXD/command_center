{
  "name": "command-center",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "fmt": "deno fmt backend/supabase/functions",
    "lint": "deno lint backend/supabase/functions",
    "test:contract": "dotenv -e .env.test -- vitest run tests/contract",
    "test:rls": "dotenv -e .env.test -- vitest run tests/rls",
    "test:accessibility": "dotenv -e .env.test -- vitest run tests/accessibility",
    "test": "pnpm --filter frontend test && pnpm test:contract && pnpm test:rls && pnpm test:accessibility"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.48.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/svelte": "^5.2.8",
    "dotenv-cli": "^10.0.0",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.12"
    }
  }
}
